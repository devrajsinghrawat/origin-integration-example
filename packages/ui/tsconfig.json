{
    "compilerOptions": {
        "jsx": "react",
        "module": "commonjs",
        "declaration": false,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "noImplicitAny": false,
        "lib": ["es2019", "dom"]
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}